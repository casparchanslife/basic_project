@model Learn.ViewModel.RoleBindingModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>RoleBindingModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="ibox-title">
            <h5>Access Right</h5>
            <div class="ibox-tools">
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </div>
        </div>
        <div class="ibox-content">

            <table id="tbl" class="table table-striped">
                <tr>
                    <th>Function Group</th>
                    <th>Function Description</th>
                    <th><div class="checkbox i-checks m-t-none m-b-none"><label><input type="checkbox" value="" id="chkAllRead"><strong>Read</strong></label></div></th>
                    <th><div class="checkbox i-checks m-t-none m-b-none"><label><input type="checkbox" value="" id="chkAllUpdate"><strong>Update</strong></label></div></th>
                    <th><div class="checkbox i-checks m-t-none m-b-none"><label><input type="checkbox" value="" id="chkAllInsert"><strong>Insert</strong></label></div></th>
                    <th><div class="checkbox i-checks m-t-none m-b-none"><label><input type="checkbox" value="" id="chkAllDelete"><strong>Delete</strong></label></div></th>
                </tr>

                @for (int i = 0; i < Model.AccessRightList.Count(); i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem.AccessRightList[i].description)
                            @Html.HiddenFor(modelItem => modelItem.AccessRightList[i].description)
                            @Html.HiddenFor(modelItem => modelItem.AccessRightList[i].function_group_id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem.AccessRightList[i].function_description)
                            @Html.HiddenFor(modelItem => modelItem.AccessRightList[i].function_description)
                            @Html.HiddenFor(modelItem => modelItem.AccessRightList[i].function_id)
                            @Html.HiddenFor(modelItem => modelItem.AccessRightList[i].role_id)
                        </td>
                        <td>
                            <div class="checkbox i-checks m-t-none m-b-none">@Html.EditorFor(modelItem => modelItem.AccessRightList[i].can_read)</div>
                        </td>
                        <td>
                            <div class="checkbox i-checks m-t-none m-b-none">@Html.EditorFor(modelItem => modelItem.AccessRightList[i].can_update)</div>
                        </td>
                        <td>
                            <div class="checkbox i-checks m-t-none m-b-none">@Html.EditorFor(modelItem => modelItem.AccessRightList[i].can_insert)</div>
                        </td>
                        <td>
                            <div class="checkbox i-checks m-t-none m-b-none">@Html.EditorFor(modelItem => modelItem.AccessRightList[i].can_delete)</div>
                        </td>
                    </tr>
                }
            </table>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
